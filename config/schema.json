{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unit09 Configuration Schema",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "env": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "logLevel": {
          "type": "string"
        }
      },
      "required": [
        "env",
        "port"
      ]
    },
    "solana": {
      "type": "object",
      "properties": {
        "cluster": {
          "type": "string"
        },
        "commitment": {
          "type": "string"
        }
      },
      "required": [
        "cluster"
      ]
    },
    "pipeline": {
      "type": "object",
      "properties": {
        "observeIntervalSeconds": {
          "type": "integer"
        },
        "maxConcurrentJobs": {
          "type": "integer"
        },
        "maxRepoSizeMB": {
          "type": "integer"
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "allowedOrigins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "enableRateLimit": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "app",
    "solana"
  ]
}
